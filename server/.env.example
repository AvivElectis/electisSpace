# electisSpace Server Environment Variables
# Copy to .env.development or .env.production and fill in values.

# ======================
# Server Configuration
# ======================
NODE_ENV=development
PORT=3000
API_VERSION=v1

# ======================
# Database (PostgreSQL)
# ======================
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/electisspace?schema=public"
# DB_POOL_MAX=20

# ======================
# Redis
# ======================
REDIS_URL="redis://localhost:6379"

# ======================
# JWT Authentication
# Generate with: openssl rand -hex 32
# ======================
JWT_ACCESS_SECRET="GENERATE_WITH_openssl_rand_-hex_32"
JWT_REFRESH_SECRET="GENERATE_WITH_openssl_rand_-hex_32"
JWT_ACCESS_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# ======================
# Encryption
# Generate with: openssl rand -hex 16
# ======================
ENCRYPTION_KEY="GENERATE_WITH_openssl_rand_-hex_16"

# ======================
# CORS
# ======================
CORS_ORIGINS="https://localhost:3000"

# ======================
# Rate Limiting
# ======================
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# ======================
# Logging
# ======================
LOG_LEVEL=debug

# ======================
# Email Configuration (Exchange Server)
# ======================
EXCHANGE_NO_REPLY="noReply@electis.co.il"
POWER_USER="domain/username"
EXCHANGE_PASSWORD="your_exchange_password"

# ======================
# SoluM AIMS (Default - can be overridden per company)
# ======================
SOLUM_DEFAULT_API_URL="https://eu.common.solumesl.com"
SOLUM_DEFAULT_CLUSTER="common"

# ======================
# Admin Account (Initial Setup)
# ======================
ADMIN_EMAIL="admin@electis.co.il"
ADMIN_PASSWORD="CHANGE_ME_STRONG_PASSWORD"

# ======================
# Docker Only (used by docker-compose for PostgreSQL container)
# Set via shell env or root .env when running docker-compose
# ======================
# POSTGRES_PASSWORD="change_me_strong_password"
