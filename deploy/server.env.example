# electisSpace Server â€” Ubuntu Production Environment
# DATABASE_URL and REDIS_URL are set by docker-compose.ubuntu.yml
# POSTGRES_PASSWORD must be set as a shell env var or in a root .env file
# (it's used by docker-compose.ubuntu.yml for the DATABASE_URL)

# ======================
# Server Configuration
# ======================
NODE_ENV=production
PORT=3000
API_VERSION=v1

# ======================
# JWT Authentication
# Generate with: openssl rand -hex 32
# ======================
JWT_ACCESS_SECRET=CHANGE_ME_GENERATE_WITH_openssl_rand_hex_32
JWT_REFRESH_SECRET=CHANGE_ME_GENERATE_WITH_openssl_rand_hex_32
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# ======================
# Encryption
# Generate with: openssl rand -hex 16
# ======================
ENCRYPTION_KEY=CHANGE_ME_GENERATE_WITH_openssl_rand_hex_16

# ======================
# CORS (set to your domain)
# ======================
CORS_ORIGINS=https://your-domain.com

# ======================
# Rate Limiting
# ======================
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# ======================
# Logging
# ======================
LOG_LEVEL=info

# ======================
# Email Configuration (Exchange Server)
# ======================
EXCHANGE_NO_REPLY=noReply@electis.co.il
POWER_USER=maagar/aviv
EXCHANGE_PASSWORD=CHANGE_ME

# ======================
# SoluM AIMS (Default)
# ======================
SOLUM_DEFAULT_API_URL=https://eu.common.solumesl.com
SOLUM_DEFAULT_CLUSTER=common

# ======================
# Admin Account
# ======================
ADMIN_EMAIL=admin@electis.co.il
ADMIN_PASSWORD=CHANGE_ME_STRONG_PASSWORD
