# ============================================================
# electisSpace — Production Docker Environment Variables
# ============================================================
# Copy this file to .env.production and fill in real values.
# Referenced by docker-compose.prod.yml via env_file.
# ============================================================

# ======================
# Database
# ======================
POSTGRES_PASSWORD=CHANGE_ME_strong_password_here

# ======================
# JWT Authentication
# ======================
# Generate with: openssl rand -hex 32
JWT_ACCESS_SECRET=CHANGE_ME_generate_64_char_hex_secret
JWT_REFRESH_SECRET=CHANGE_ME_generate_64_char_hex_secret
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# ======================
# Encryption
# ======================
# Generate with: openssl rand -hex 16
ENCRYPTION_KEY=CHANGE_ME_generate_32_char_hex_key

# ======================
# CORS
# ======================
CORS_ORIGINS=https://solum.co.il,http://solum.co.il

# ======================
# Rate Limiting
# ======================
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# ======================
# SoluM AIMS (Default)
# ======================
SOLUM_DEFAULT_API_URL=https://eu.common.solumesl.com
SOLUM_DEFAULT_CLUSTER=common

# ======================
# Admin Account (Initial Setup — change after first login)
# ======================
ADMIN_EMAIL=admin@electis.co.il
ADMIN_PASSWORD=CHANGE_ME_strong_admin_password
